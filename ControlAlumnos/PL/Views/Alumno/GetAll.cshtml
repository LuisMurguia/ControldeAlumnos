@model ML.Alumno
@{ ViewBag.Title = "GetAll";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<h2>Alumnos</h2>
<div class="row">
    <div class="col-md-12">
        <p style="text-align:justify">Selecciona el Icono "Verde" si deseas agregar un nuevo alumno, el Icono "Amarillo" si deseas modificarlo o el Icono "Rojo" si deseas eliminar al alumno existente</p>
    </div>
</div>


<div class="container">
    <div class="row">
        <div style="float:right; margin-bottom:1rem;">
            <div style="float:right; margin-bottom:1rem;">
                @Html.ActionLink("+", "Form", "Alumno", htmlAttributes: new { @class = "btn btn-success" })
            </div>
        </div>
        <table class="table table-bordered table-responsive">
            <thead>
                <tr>
                    <td class="text-center" style="font-family:Verdana;"><strong>Editar</strong></td>
                    <td class="text-center" style="font-family:Verdana;"><strong>Nombre</strong></td>
                    <td class="text-center" style="font-family:Verdana;"><strong>ApellidoPaterno</strong></td>
                    <td class="text-center" style="font-family:Verdana;"><strong>ApellidoMaterno</strong></td>
                    <td class="text-center" style="font-family:Verdana;"><strong>Eliminar</strong></td>
                </tr>
            </thead>
            <tbody>
                @foreach (ML.Alumno alumno in Model.Alumnos)
                {
    <tr>
        <td><center><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "Alumno", new { IdAlumno = alumno.IdAlumno })"></a></center></td>
        <td><center>@alumno.Nombre</center></td>
        <td><center>@alumno.ApellidoPaterno</center></td>
        <td><center>@alumno.ApellidoMaterno</center></td>
        <td><center><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Alumno", new { IdAlumno= alumno.IdAlumno})" onclick="return confirm('Estas seguro que deseas eliminar este registro?');" ;></a></center></td>

    </tr>}
            </tbody>
        </table>
    </div>
</div>

